@model UniversityManagementSystemWebApp.Models.Department

@{
    ViewBag.Title = "Save Department";
}


@using (Html.BeginForm("SaveDepartments", "Department", FormMethod.Post, new { id = "saveDepartmentForm", @class = "form-horizontal  main-center" }))
{
    <div class="form-group">
        <h2>Save Department</h2>
        <hr />
    </div>



    <div class="form-group">

        <h3><label for="Code" class="cols-sm-2 control-label">Department Code</label></h3>

        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-building-o" aria-hidden="true"></i></span>
            @Html.TextBoxFor(x => x.Code, new { @class = "form-control", placeholder = "Type a Department Code" })
        </div>
        <div class="input-group">
            @Html.ValidationMessageFor(x => x.Code, null, new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">

        <h3><label for="Name" class="cols-sm-2 control-label">Department Name</label></h3>

        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-building-o" aria-hidden="true"></i></span>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Type a Department Name" })
        </div>
        <div class="input-group">
            @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group control-label">
        <button class="btn btn-default input-group" type="submit">Save</button>
    </div>
    <br />

    if (ViewBag.Message != null)
    {
        <div>
            <label class="form-group input-group alert alert-info">@ViewBag.Message</label>
            <br />
        </div>

    }



}


