@{
    ViewBag.Title = "UnAllocat All Course";
    
}


<div class="form-horizontal  main-center">

    <div class="form-group">
        <h2>Unassign All Courses</h2>
        <hr />
    </div>



    <!--Name , Action, Controller-->
    @Html.ActionLink("Unassign All Courses", "UnAssignCourse", "UnassignAllCourses", new {confirm = true},
        new {onclick = "return confirm('Are you sure to Unassign All Courses?')", @class = "btn btn-default"})
    <br /><br />
    @if (ViewBag.Message != null)
    {
        <div>
            <label class="form-group input-group alert alert-info">@ViewBag.Message</label>
            <br />
        </div>

    }

</div>
